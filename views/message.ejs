<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Message | Simple Message Board</title>
    <meta name="description" content="View message details">
    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <!-- Styles -->
    <link rel="stylesheet" href="/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
    <!-- Animated Background -->
    <div class="background">
        <div class="orb orb-1"></div>
        <div class="orb orb-2"></div>
    </div>

    <!-- Message Detail Container -->
    <div class="message-detail-container">
        <!-- Header -->
        <div class="detail-header">
            <a href="/" class="back-btn" aria-label="Go back">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                </svg>
            </a>
            <h1>Message Details</h1>
        </div>

        <!-- Detail Content -->
        <div class="detail-content">
            <!-- Author -->
            <div class="detail-item">
                <span class="detail-label">Author</span>
                <div class="detail-value author-value">
                    <div class="author-avatar">
                        <%= message.user_name.charAt(0).toUpperCase() %>
                    </div>
                    <span><%= message.user_name %></span>
                </div>
            </div>

            <!-- Message -->
            <div class="detail-item">
                <span class="detail-label">Message</span>
                <div class="detail-value message-text">
                    <%= message.text %>
                </div>
            </div>

            <!-- Date -->
            <div class="detail-item">
                <span class="detail-label">Posted On</span>
                <div class="detail-value date-value">
                    <svg viewBox="0 0 24 24" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <polyline points="12 6 12 12 16 14"></polyline>
                    </svg>
                    <span><%= message.added.toLocaleString('en-US', { 
                        weekday: 'long',
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                    }) %></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
