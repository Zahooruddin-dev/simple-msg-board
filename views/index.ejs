<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Message Board</title>
    <meta name="description" content="A beautiful, modern simple message board with glassmorphism design">
    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <!-- Styles -->
    <link rel="stylesheet" href="/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Animated Background -->
    <div class="background">
        <div class="orb orb-1"></div>
        <div class="orb orb-2"></div>
    </div>

    <!-- Message Board Container -->
    <div class="message-board">
        <!-- Header -->
        <header class="board-header">
            <div class="header-content">
                <div class="logo-section">
                    <div class="logo-icon">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                        </svg>
                    </div>
                    <h1>Simple Message Board</h1>
                </div>
            </div>
        </header>

        <!-- Current User Section -->
        <div class="current-user">
            <div class="user-avatar gradient-avatar">
                <span>M</span>
                <div class="online-indicator"></div>
            </div>
            <div class="user-info">
                <span class="username">Me</span>
                <span class="status">Online</span>
            </div>
        </div>

        <!-- Messages Container -->
        <div class="messages-container" id="messagesContainer">
            <% messages.forEach(message => { %>
                    <div class="message">
                        <div class="message-header">
                            <span class="sender-name"><%= message.user_name %></span>
                            <span class="timestamp">
                                <%= message.added.toLocaleString() %>
                            </span>
                        </div>

                        <div class="message-bubble">
                            <p><%= message.text %></p>
                            <a href="/message/<%= message.id %>">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640">
                                    <path d="M320 96C239.2 96 174.5 132.8 127.4 176.6C80.6 220.1 49.3 272 34.4 307.7C31.1 315.6 31.1 324.4 34.4 332.3C49.3 368
                                        80.6 420 127.4 463.4C174.5 507.1 239.2 544 320 544C400.8 544 465.5 507.2 512.6 463.4C559.4 419.9 590.7 368 605.6 332.3C608.9
                                        324.4 608.9 315.6 605.6 307.7C590.7 272 559.4 220 512.6 176.6C465.5 132.9 400.8 96 320 96zM176 320C176 240.5 240.5 176 320 176C399.5
                                        176 464 240.5 464 320C464 399.5 399.5 464 320 464C240.5 464 176 399.5 176 320zM320 256C320 291.3 291.3 320 256 320C244.5 320 233.7 317
                                        224.3 311.6C223.3 322.5 224.2 333.7 227.2 344.8C240.9 396 293.6 426.4 344.8 412.7C396 399 426.4 346.3 412.7 295.1C400.5 249.4 357.2 220.3
                                        311.6 224.3C316.9 233.6 320 244.4 320 256z"
                                    />
                                </svg>
                            </a>
                            
                        </div>
                    </div>
            <% })%>
        </div>
        <!-- Message Input -->
        <div class="message-input-container">
            
            <button class="input-wrapper" onclick="window.location.href='/new'">
                Enter a message
            </button>    
            <button class="send-btn" id="sendBtn" aria-label="Send message" onclick="window.location.href='/new'">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="22" y1="2" x2="11" y2="13"></line>
                    <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                </svg>
            </button>
        </div>
    </div>

    <!-- Footer -->
 <footer class="site-footer">
        <div class="footer-content">
